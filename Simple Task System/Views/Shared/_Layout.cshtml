<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Task System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        .menus
        {
            margin-top:10px;
            margin-left:15px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
               

                @Html.ActionLink("Simple Task System", "Index", "UserTasks", new { area = "" }, new { @class = "navbar-brand" })



           

            </div>
      
            @Html.ActionLink("Task List", "Index", "UserTasks", new { area = "" }, new { @class = "menus btn btn-primary pull-right btn-sm" })

            @Html.ActionLink("New Task", "TaskNew", "UserTasks", new { area = "" }, new { @class = "menus btn btn-primary pull-right btn-sm" })



        </div>
 

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Simple Task System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
